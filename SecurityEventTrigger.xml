<?xml version="1.0"?>
<SecurityEventTriggers xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
<SecurityEventTrigger Name="Attempted Log In" IsDisabled="false" EventFilter="Event.EventType = 'LoginAttempt'">
    <Actions>
      <TriggerAction xsi:type="SmtpTriggerAction" From="" To="EMAIL_ADDRESS_HERE" Subject="A user has attempted to log into the application">
        <Body>{Event.Data}</Body>
      </TriggerAction>
    </Actions>
  </SecurityEventTrigger>
</SecurityEventTriggers>